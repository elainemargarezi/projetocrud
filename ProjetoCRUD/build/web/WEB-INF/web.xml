<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>LoginExec</servlet-name>
        <servlet-class>br.com.alfashop.controller.LoginExec</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoriasExec</servlet-name>
        <servlet-class>br.com.alfashop.controller.CategoriasExec</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdutosExec</servlet-name>
        <servlet-class>br.com.alfashop.controller.ProdutosExec</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginExec</servlet-name>
        <url-pattern>/adm/login-exec</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoriasExec</servlet-name>
        <url-pattern>/adm/categorias-exec</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdutosExec</servlet-name>
        <url-pattern>/adm/produtos-exec</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
